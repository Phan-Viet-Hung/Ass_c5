@model C5.Models.Category

@{
    ViewData["Title"] = "EditCategory";
}

<h1>EditCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory" method="post">
            <input type="hidden" name="Id" value="@Model.Id"> <!-- Lưu ID -->
            <input type="text" name="Name" value="@Model.Name" required>
            <button type="submit">Cập nhật</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListCategory">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}